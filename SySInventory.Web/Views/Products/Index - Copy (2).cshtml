@using System.Web.Mvc.Html
@using GridMvc.Html
@using GridMvc.Sorting
@model Grid.Mvc.Ajax.GridExtensions.AjaxGrid<SySInventory.Core.Model.Entities.Product>
@{
    ViewBag.Title = "Lista de Productos";
}

@Html.Grid(Model,"_Grid").Named("productsList").Columns(columns =>
    {
        columns.Add(car => car.Code).Titled("Codigo").SetWidth(100).Encoded(false).Sanitized(false).Sortable(true).SortInitialDirection(GridSortDirection.Ascending);
        columns.Add(car => car.Description).Titled("Descripcion").SetWidth(100).Encoded(false).Sanitized(false).Sortable(true);
        columns.Add(car => car.CostPrice).Titled("Costo").SetWidth(100).Encoded(false).Sanitized(false).Sortable(true);
        columns.Add(car => car.RetailPrice).Titled("Minorista").SetWidth(100).Encoded(false).Sanitized(false).Sortable(true);
    }).WithPaging(3).Filterable().WithMultipleFilters()



@section scripts
{
    @Scripts.Render("~/bundles/gridDemo.js")

    <script type="text/javascript">
        GridMvcAjax.demo.init(
       {
           updateGridAction: '@Url.Action("Grid")'
       });
    </script>
}
